@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "UserHasSpecial";
}

<div class="modal fade" id="UserHasSpecialModel" style="z-index:1500" tabindex="-1" role="dialog" aria-labelledby="UserHasSpecialModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UserHasSpecialModelLabel">บันทึกข้อมูล UserHasSpecial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">

<input class="form-control" type="hidden" id="UserHasSpecial_id" />

<div class='row'></div>
<div class='row'></div>
<div class='row'>
    <div class="form-group col-md-6">
	    <label id="lab_UserHasSpecial_masterRoleId" for="UserHasSpecial_masterRoleId">รหัสกลุ่มผู้ใช้</label>
	    <select class="form-control" id="UserHasSpecial_masterRoleId" iLabel="รหัสกลุ่มผู้ใช้" iRequire="true" iGroup="UserHasSpecial" ></select>
    </div>

    <div class="form-group col-md-6">
	    <label id="lab_UserHasSpecial_specialSkill" for="UserHasSpecial_specialSkill">ความเชี่ยวชาญ</label>
	    <input class="form-control" type="text" id="UserHasSpecial_specialSkill" iLabel="ความเชี่ยวชาญ" iRequire="true" iGroup="UserHasSpecial"  />
    </div>
</div>
<div class='row'></div>
<div class='row'>
    <div class="form-group col-md-12">
	    <label id="lab_UserHasSpecial_remark" for="UserHasSpecial_remark">หมายเหตุ</label>
	    <input class="form-control" type="text" id="UserHasSpecial_remark" iLabel="หมายเหตุ" iRequire="true" iGroup="UserHasSpecial"  />
    </div>
</div>


                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-primary" onclick="javascript:UserHasSpecial_PutUpdate()">บันทึก</button>
            </div>
        </div>
    </div>
</div>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">UserHasSpecial</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
        
                        <div class="form-group col-md-3">
                            <label id='lab_s_UserHasSpecial_masterRoleId' for='s_UserHasSpecial_masterRoleId'>รหัสกลุ่มผู้ใช้</label>
                            <select class="form-control" id="s_UserHasSpecial_masterRoleId" iLabel="รหัสกลุ่มผู้ใช้" iRequire="true" iGroup="s_UserHasSpecial" title='รหัสกลุ่มผู้ใช้' placeholder='รหัสกลุ่มผู้ใช้'></select>
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_UserHasSpecial_specialSkill' for='s_UserHasSpecial_specialSkill'>ความเชี่ยวชาญ</label>
                            <input class="form-control" type="text" id="s_UserHasSpecial_specialSkill" iLabel="ความเชี่ยวชาญ" iRequire="true" iGroup="s_UserHasSpecial" title='ความเชี่ยวชาญ' placeholder='ความเชี่ยวชาญ' />
                        </div>


                    <div class="form-group col-sm-3">
                        <button class="btn btn-info" onclick="javascript:UserHasSpecial_DoSearch();"><i class="fa fa-search" style="font-size: 14px;"></i> ค้นหา</button>
                        <button class="btn btn-info" onclick="javascript:UserHasSpecial_GoCreate();"><i class="fa fa-plus" style="font-size: 14px;"></i> เพิ่มรายการ</button>
                        <button style="display:none;" class="btn btn-info" onclick="javascript:UserHasSpecial_GetSelect('id');">ดึงตัวเลือก</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="UserHasSpecialTable" class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <!--<th>เลือก</th>-->
                                    <th>เครื่องมือ</th>
            <th><label id='h_UserHasSpecial_masterRoleId'>รหัสกลุ่มผู้ใช้</label></th>
            <th><label id='h_UserHasSpecial_specialSkill'>ความเชี่ยวชาญ</label></th>
            <th><label id='h_UserHasSpecial_remark'>หมายเหตุ</label></th>


                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/UserHasSpecial/UserHasSpecial.js"></script>
    <script>
        $(document).ready(function () {
            UserHasSpecial_InitiateDataTable();
            UserHasSpecial_InitialForm();
            SetupValidationRemark("UserHasSpecial");
        });
    </script>
}

