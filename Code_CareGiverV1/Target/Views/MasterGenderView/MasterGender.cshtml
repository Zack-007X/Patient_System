@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "MasterGender";
}

<div class="modal fade" id="MasterGenderModel" style="z-index:1500" tabindex="-1" role="dialog" aria-labelledby="MasterGenderModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="MasterGenderModelLabel">บันทึกข้อมูล MasterGender</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">

<input class="form-control" type="hidden" id="MasterGender_id" />

<div class='row'></div>
<div class='row'></div>
<div class='row'>
    <div class="form-group col-md-4">
	    <label id="lab_MasterGender_code" for="MasterGender_code">เลขเพศ</label>
	    <input class="form-control" type="text" id="MasterGender_code" iLabel="เลขเพศ" iRequire="true" iGroup="MasterGender"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_MasterGender_name" for="MasterGender_name">เพศ</label>
	    <input class="form-control" type="text" id="MasterGender_name" iLabel="เพศ" iRequire="true" iGroup="MasterGender"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_MasterGender_remark" for="MasterGender_remark">หมายเหตุ</label>
	    <input class="form-control" type="text" id="MasterGender_remark" iLabel="หมายเหตุ" iRequire="true" iGroup="MasterGender"  />
    </div>
</div>


                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-primary" onclick="javascript:MasterGender_PutUpdate()">บันทึก</button>
            </div>
        </div>
    </div>
</div>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">MasterGender</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
        
                        <div class="form-group col-md-3">
                            <label id='lab_s_MasterGender_code' for='s_MasterGender_code'>เลขเพศ</label>
                            <input class="form-control" type="text" id="s_MasterGender_code" iLabel="เลขเพศ" iRequire="true" iGroup="s_MasterGender" title='เลขเพศ' placeholder='เลขเพศ' />
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_MasterGender_name' for='s_MasterGender_name'>เพศ</label>
                            <input class="form-control" type="text" id="s_MasterGender_name" iLabel="เพศ" iRequire="true" iGroup="s_MasterGender" title='เพศ' placeholder='เพศ' />
                        </div>


                    <div class="form-group col-sm-3">
                        <button class="btn btn-info" onclick="javascript:MasterGender_DoSearch();"><i class="fa fa-search" style="font-size: 14px;"></i> ค้นหา</button>
                        <button class="btn btn-info" onclick="javascript:MasterGender_GoCreate();"><i class="fa fa-plus" style="font-size: 14px;"></i> เพิ่มรายการ</button>
                        <button style="display:none;" class="btn btn-info" onclick="javascript:MasterGender_GetSelect('id');">ดึงตัวเลือก</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="MasterGenderTable" class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <!--<th>เลือก</th>-->
                                    <th>เครื่องมือ</th>
            <th><label id='h_MasterGender_code'>เลขเพศ</label></th>
            <th><label id='h_MasterGender_name'>เพศ</label></th>
            <th><label id='h_MasterGender_remark'>หมายเหตุ</label></th>


                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/MasterGender/MasterGender.js"></script>
    <script>
        $(document).ready(function () {
            MasterGender_InitiateDataTable();
            MasterGender_InitialForm();
            SetupValidationRemark("MasterGender");
        });
    </script>
}

