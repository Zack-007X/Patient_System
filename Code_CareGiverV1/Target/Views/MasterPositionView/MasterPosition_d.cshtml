@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "MasterPosition";
    Layout = "_LayoutDirect";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">MasterPosition</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">       

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">บันทึกข้อมูล MasterPosition</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
	<input class="form-control" type="hidden" id="MasterPosition_id" />

<div class='row'></div>
<div class='row'></div>
<div class='row'>
    <div class="form-group col-md-4">
	    <label id="lab_MasterPosition_code" for="MasterPosition_code">เลขตำแหน่งราชการ</label>
	    <input class="form-control" type="text" id="MasterPosition_code" iLabel="เลขตำแหน่งราชการ" iRequire="false" iGroup="MasterPosition"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_MasterPosition_name" for="MasterPosition_name">ชื่อตำแหน่งราชการ</label>
	    <input class="form-control" type="text" id="MasterPosition_name" iLabel="ชื่อตำแหน่งราชการ" iRequire="false" iGroup="MasterPosition"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_MasterPosition_remark" for="MasterPosition_remark">หมายเหตุ</label>
	    <input class="form-control" type="text" id="MasterPosition_remark" iLabel="หมายเหตุ" iRequire="false" iGroup="MasterPosition"  />
    </div>
</div>

                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="button" class="btn btn-default" onclick="javascript:window_close()" style="background-color: #fff;">ยกเลิก</button>
                <button type="button" class="btn btn-primary" onclick="javascript:MasterPosition_PutUpdate()">บันทึก</button>
            </div>
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/MasterPosition/MasterPosition_d.js"></script>
    <script>
        $(document).ready(function () {
            var id = getUrlParameter("id");
            if (id) {
                MasterPosition_SetEditForm(id);
            } else {
                MasterPosition_SetCreateForm();
            }
            SetupValidationRemark("MasterPosition");
        });
    </script>
}

