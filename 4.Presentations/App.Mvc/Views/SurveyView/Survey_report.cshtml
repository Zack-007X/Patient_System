@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Survey";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">Survey</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">


                        <div class="form-group col-md-3">
                            <label id='lab_s_Survey_patientId' for='s_Survey_patientId'>ผู้ป่วย</label>
                            <select class="form-control" id="s_Survey_patientId" iLabel="ผู้ป่วย" iRequire="true" iGroup="s_Survey" title='ผู้ป่วย' placeholder='ผู้ป่วย'></select>
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Survey_doctorId' for='s_Survey_doctorId'>หมอที่ทำการตรวจ</label>
                            <select class="form-control" id="s_Survey_doctorId" iLabel="หมอที่ทำการตรวจ" iRequire="true" iGroup="s_Survey" title='หมอที่ทำการตรวจ' placeholder='หมอที่ทำการตรวจ'></select>
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Survey_masterPatientStateId' for='s_Survey_masterPatientStateId'>สถานะคนไข้</label>
                            <select class="form-control" id="s_Survey_masterPatientStateId" iLabel="สถานะคนไข้" iRequire="true" iGroup="s_Survey" title='สถานะคนไข้' placeholder='สถานะคนไข้'></select>
                        </div>
  


                    <div class="form-group col-sm-6">
                        <button class="btn btn-primary" onclick="javascript:Survey_DoSearch('pdf');">แสดงรายงาน</button>
                        <button class="btn btn-primary" onclick="javascript:Survey_DoSearch('xlsx');">ดาวน์โหลดเป็น Excel</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <iframe id="report_result" style="display:none; height:500px; width:100%;"></iframe>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/Survey/Survey_report.js"></script>
    <script>
        $(document).ready(function () {
            Survey_InitialForm();
            SetupValidationRemark("s_Survey");
        });
    </script>
}

