@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Survey";
    Layout = "_LayoutDirect";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">Survey</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">       

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">บันทึกข้อมูล Survey</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
	<input class="form-control" type="hidden" id="Survey_id" />

<div class='row'></div>
<div class='row'></div>
<div class='row'>
    <div class="form-group col-md-4">
	    <label id="lab_Survey_patientId" for="Survey_patientId">ผู้ป่วย</label>
	    <select class="form-control" id="Survey_patientId" iLabel="ผู้ป่วย" iRequire="false" iGroup="Survey" ></select>
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_Survey_doctorId" for="Survey_doctorId">หมอที่ทำการตรวจ</label>
	    <select class="form-control" id="Survey_doctorId" iLabel="หมอที่ทำการตรวจ" iRequire="false" iGroup="Survey" ></select>
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_Survey_masterPatientStateId" for="Survey_masterPatientStateId">สถานะคนไข้</label>
	    <select class="form-control" id="Survey_masterPatientStateId" iLabel="สถานะคนไข้" iRequire="false" iGroup="Survey" ></select>
    </div>
</div>
<div class='row'>
    <div class="form-group col-md-4">
	    <label id="lab_Survey_BloodPressure" for="Survey_BloodPressure">ความดันโลหิต</label>
	    <input class="form-control" type="text" id="Survey_BloodPressure" iLabel="ความดันโลหิต" iRequire="false" iGroup="Survey"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_Survey_OxygenLevel" for="Survey_OxygenLevel">ระดับเลือด</label>
	    <input class="form-control" type="text" id="Survey_OxygenLevel" iLabel="ระดับเลือด" iRequire="false" iGroup="Survey"  />
    </div>

    <div class="form-group col-md-4">
	    <label id="lab_Survey_HeartRate" for="Survey_HeartRate">อัตราการเต้นของหัวใจ</label>
	    <input class="form-control" type="text" id="Survey_HeartRate" iLabel="อัตราการเต้นของหัวใจ" iRequire="false" iGroup="Survey"  />
    </div>
</div>
<div class='row'>
    <div class="form-group col-md-4">
	    <label id="lab_Survey_SurveyDate" for="Survey_SurveyDate">วันที่ทำการตรวจ</label>
	    <input class="form-control" type="text" id="Survey_SurveyDate" data-provide="datepicker" data-date-language="th-th" iLabel="วันที่ทำการตรวจ" iRequire="false" iGroup="Survey"  />
    </div>

    <div class="form-group col-md-8">
	    <label id="lab_Survey_SurveyDetail" for="Survey_SurveyDetail">รายละเอียดการตรวจ</label>
	    <textarea  class="form-control" rows="4" cols="50" id="Survey_SurveyDetail" iLabel="รายละเอียดการตรวจ" iRequire="false" iGroup="Survey" ></textarea>
    </div>
</div>
<div class='row'>
    <div class="form-group col-md-12">
	    <label id="lab_Survey_remark" for="Survey_remark">หมายเหตุ</label>
	    <input class="form-control" type="text" id="Survey_remark" iLabel="หมายเหตุ" iRequire="false" iGroup="Survey"  />
    </div>
</div>

                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="button" class="btn btn-default" onclick="javascript:window_close()" style="background-color: #fff;">ยกเลิก</button>
                <button type="button" class="btn btn-primary" onclick="javascript:Survey_PutUpdate()">บันทึก</button>
            </div>
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/Survey/Survey_d.js"></script>
    <script>
        $(document).ready(function () {
            var id = getUrlParameter("id");
            if (id) {
                Survey_SetEditForm(id);
            } else {
                Survey_SetCreateForm();
            }
            SetupValidationRemark("Survey");
        });
    </script>
}

