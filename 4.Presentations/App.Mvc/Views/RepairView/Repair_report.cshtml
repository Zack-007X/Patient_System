@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Repair";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">Repair</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">


                        <div class="form-group col-md-3">
                            <label id='lab_s_Repair_bookingId' for='s_Repair_bookingId'>Booking</label>
                            <select class="form-control" id="s_Repair_bookingId" iLabel="Booking" iRequire="false" iGroup="s_Repair" title='Booking' placeholder='Booking'></select>
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Repair_repairCode' for='s_Repair_repairCode'>เลขที่การซ่อม</label>
                            <input class="form-control" type="text" id="s_Repair_repairCode" iLabel="เลขที่การซ่อม" iRequire="false" iGroup="s_Repair" title='เลขที่การซ่อม' placeholder='เลขที่การซ่อม' />
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Repair_technicianId' for='s_Repair_technicianId'>ช่างซ่อม</label>
                            <select class="form-control" id="s_Repair_technicianId" iLabel="ช่างซ่อม" iRequire="false" iGroup="s_Repair" title='ช่างซ่อม' placeholder='ช่างซ่อม'></select>
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Repair_startDate' for='s_Repair_startDate'>วันที่เริ่มซ่อม</label>
                            <input class="form-control" type="text" id="s_Repair_startDate" data-provide="datepicker" data-date-language="th-th" iLabel="วันที่เริ่มซ่อม" iRequire="false" iGroup="s_Repair" title='วันที่เริ่มซ่อม' placeholder='วันที่เริ่มซ่อม' />
                        </div>

                        <div class="form-group col-md-3">
                            <label id='lab_s_Repair_endDate' for='s_Repair_endDate'>วันที่ซ่อมเสร็จ</label>
                            <input class="form-control" type="text" id="s_Repair_endDate" data-provide="datepicker" data-date-language="th-th" iLabel="วันที่ซ่อมเสร็จ" iRequire="false" iGroup="s_Repair" title='วันที่ซ่อมเสร็จ' placeholder='วันที่ซ่อมเสร็จ' />
                        </div>
  


                    <div class="form-group col-sm-6">
                        <button class="btn btn-primary" onclick="javascript:Repair_DoSearch('pdf');">แสดงรายงาน</button>
                        <button class="btn btn-primary" onclick="javascript:Repair_DoSearch('xlsx');">ดาวน์โหลดเป็น Excel</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <iframe id="report_result" style="display:none; height:500px; width:100%;"></iframe>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/Repair/Repair_report.js"></script>
    <script>
        $(document).ready(function () {
            Repair_InitialForm();
            SetupValidationRemark("s_Repair");
        });
    </script>
}

