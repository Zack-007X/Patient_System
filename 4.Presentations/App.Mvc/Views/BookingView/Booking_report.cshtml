@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Booking";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Configuration["SiteInformation:modulename"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]">หน้าแรก</a></li>
                    <li class="breadcrumb-item "><a href="@Configuration["SiteInformation:mainsite"]@Configuration["SiteInformation:appsite"]">@Configuration["SiteInformation:modulename"]</a></li>
                    <li class="breadcrumb-item active">Booking</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">


                        <div class="form-group col-md-3">
                            <label id='lab_s_Booking_bookingNumber' for='s_Booking_bookingNumber'>เลขที่การจอง</label>
                            <input class="form-control" type="text" id="s_Booking_bookingNumber" iLabel="เลขที่การจอง" iRequire="false" iGroup="s_Booking" title='เลขที่การจอง' placeholder='เลขที่การจอง' />
                        </div>


                    <div class="form-group col-sm-3 d-flex align-items-end">
                        <button class="btn btn-primary mr-2" onclick="javascript:Booking_DoSearch('pdf');">แสดงรายงาน</button>
                        <button class="btn btn-primary mr-2" onclick="javascript:Booking_DoSearch('xlsx');">ดาวน์โหลดเป็น Excel</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <iframe id="report_result" style="display:none; height:500px; width:100%;"></iframe>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

@section FooterPlaceHolder{
    <script src="~/js/Booking/Booking_report.js"></script>
    <script>
        $(document).ready(function () {
            Booking_InitialForm();
            SetupValidationRemark("s_Booking");
        });
    </script>
}

